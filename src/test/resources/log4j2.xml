<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <!-- Логи в консоль -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%level] %c{1} - %msg%n"/>
        </Console>

        <!-- Логи в файл -->
        <File name="FileLogger" fileName="src/test/resources/logs/test.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%level] %c{1} - %msg%n"/>
        </File>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>

</Configuration>